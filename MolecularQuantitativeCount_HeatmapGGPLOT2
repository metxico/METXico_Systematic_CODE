library("tidyr")
library("ggplot2")

outputfile <- "InterestFile.csv"
mine.data <- read.csv(outputfile, row.names = 1)
str(mine.data)

mine.long <- pivot_longer(data = mine.data, 
                      cols = -c(Compound),
                      names_to = "Metabolito", 
                      values_to = "Abundance")
str(mine.data)

mine.heatmap <- ggplot(data = mine.long, mapping = aes(x = Metabolito,
                                                       y = Compound,
                                                       fill = Abundance)) +
  geom_tile() +
  xlab(label = "Specie")

mine.heatmap
